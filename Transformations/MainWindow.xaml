<Window x:Class="Transformations.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Transformations"
        xmlns:viewModel="clr-namespace:Transformations.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        >
    <Window.Resources>
        <Style TargetType="DockPanel">
            <Setter Property="Margin" Value="5, 5"></Setter>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Height" Value="25"></Setter>
        </Style>
    </Window.Resources>
    <Window.DataContext>
        <viewModel:MainViewModel></viewModel:MainViewModel>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MaxWidth="300"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <StackPanel >
            <DockPanel>
                <Label Content="X:"/>
                <TextBox x:Name="XInput" Text="{Binding X, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:N2}}"/>
            </DockPanel>
            <DockPanel>
                <Label Content="Y:"/>
                <TextBox x:Name="YInput" Text="{Binding Y, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:N2}}"/>
            </DockPanel>
            <DockPanel>
                <Label Content="Z:"/>
                <TextBox x:Name="ZInput" Text="{Binding Z, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:N2}}"/>
            </DockPanel>
            <DockPanel>
                <Label Content="Scale X:"/>
                <TextBox x:Name="ScaleXInput" Text="{Binding ScaleX, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:N2}}"/>
            </DockPanel>
            <DockPanel>
                <Label Content="Scale Y:"/>
                <TextBox x:Name="ScaleYInput" Text="{Binding ScaleY, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:N2}}"/>
            </DockPanel>
            <DockPanel>
                <Label Content="Scale Z:"/>
                <TextBox x:Name="ScaleZInput" Text="{Binding ScaleZ, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:N2}}"/>
            </DockPanel>
            <DockPanel>
                <Label Content="Rotate X:"/>
                <TextBox x:Name="RotateXInput" Text="{Binding RotationX, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:N2}}"/>
            </DockPanel>
            <DockPanel>
                <Label Content="Rotate Y:"/>
                <TextBox x:Name="RotateYInput" Text="{Binding RotationY, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:N2}}"/>
            </DockPanel>
            <DockPanel>
                <Label Content="Rotate Z:"/>
                <TextBox x:Name="RotateZInput" Text="{Binding RotationZ, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:N2}}"/>
            </DockPanel>
            <DockPanel>
                <CheckBox Content="Reflect XOY" x:Name="ReclectXOYInput"/>
            </DockPanel>
            <DockPanel>
                <CheckBox Content="Reflect XOZ" x:Name="ReclectXOZInput"/>
            </DockPanel>
            <DockPanel>
                <CheckBox Content="Reflect YOZ" x:Name="ReclectYOZInput"/>
            </DockPanel>
            
        </StackPanel>
        <Canvas Margin="16" Grid.Column="1" Background="White"></Canvas>
    </Grid>
</Window>
